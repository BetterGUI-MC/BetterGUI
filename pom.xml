<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>me.HSGamer</groupId>
  <artifactId>BetterGUI</artifactId>
  <version>4.2-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>BetterGUI</name>

  <description>Yet Another GUI plugin</description>
  <properties>
    <java.version>1.8</java.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.mainClass>me.hsgamer.bettergui.BetterGUI</project.mainClass>
  </properties>

  <build>
    <defaultGoal>clean package</defaultGoal>
    <finalName>${project.artifactId}</finalName>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.1</version>
        <configuration>
          <source>${java.version}</source>
          <target>${java.version}</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <createDependencyReducedPom>true</createDependencyReducedPom>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/maven/**</exclude>
                  </excludes>
                </filter>
              </filters>
              <relocations>
                <!-- FastInv -->
                <relocation>
                  <pattern>fr.mrmicky.fastinv</pattern>
                  <shadedPattern>me.hsgamer.bettergui.lib.fastinv</shadedPattern>
                </relocation>

                <!-- TaskChain -->
                <relocation>
                  <pattern>co.aikar.taskchain</pattern>
                  <shadedPattern>me.hsgamer.bettergui.lib.taskchain</shadedPattern>
                </relocation>

                <!-- Expression -->
                <relocation>
                  <pattern>me.hsgamer.hscore.expression</pattern>
                  <shadedPattern>me.hsgamer.bettergui.util.expression</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>com.udojava.evalex</pattern>
                  <shadedPattern>me.hsgamer.bettergui.lib.evalex</shadedPattern>
                </relocation>

                <!-- Collections -->
                <relocation>
                  <pattern>me.hsgamer.hscore.map</pattern>
                  <shadedPattern>me.hsgamer.bettergui.util.map</shadedPattern>
                </relocation>

                <!-- Updater -->
                <relocation>
                  <pattern>me.hsgamer.hscore.bukkit.updater</pattern>
                  <shadedPattern>me.hsgamer.bettergui.util.updater</shadedPattern>
                </relocation>

                <!-- Web -->
                <relocation>
                  <pattern>me.hsgamer.hscore.web</pattern>
                  <shadedPattern>me.hsgamer.bettergui.util.web</shadedPattern>
                </relocation>

                <!-- Config -->
                <relocation>
                  <pattern>me.hsgamer.hscore.bukkit.config</pattern>
                  <shadedPattern>me.hsgamer.bettergui.util.config</shadedPattern>
                </relocation>

                <!-- Config -->
                <relocation>
                  <pattern>me.hsgamer.hscore.bukkit.command</pattern>
                  <shadedPattern>me.hsgamer.bettergui.util.command</shadedPattern>
                </relocation>

                <!-- Addon -->
                <relocation>
                  <pattern>me.hsgamer.hscore.bukkit.addon</pattern>
                  <shadedPattern>me.hsgamer.bettergui.util.addon</shadedPattern>
                </relocation>

                <!-- Bukkit Utils -->
                <relocation>
                  <pattern>me.hsgamer.hscore.bukkit.utils</pattern>
                  <shadedPattern>me.hsgamer.bettergui.util</shadedPattern>
                </relocation>

                <!-- Common Utils -->
                <relocation>
                  <pattern>me.hsgamer.hscore.common</pattern>
                  <shadedPattern>me.hsgamer.bettergui.util.common</shadedPattern>
                </relocation>

                <!-- XSeries -->
                <relocation>
                  <pattern>com.cryptomorin.xseries</pattern>
                  <shadedPattern>me.hsgamer.bettergui.lib.xseries</shadedPattern>
                </relocation>

                <!-- BStats -->
                <relocation>
                  <pattern>org.bstats</pattern>
                  <shadedPattern>me.hsgamer.bettergui.lib.bstats</shadedPattern>
                </relocation>
              </relocations>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.22.2</version>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>3.2.0</version>
        <configuration>
          <links>
            <link>https://hsgamer.github.io/HSCore/</link>
          </links>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>jar</goal>
            </goals>
            <id>attach-javadocs</id>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-source-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>jar</goal>
            </goals>
            <id>attach-sources</id>
          </execution>
        </executions>
        <groupId>org.apache.maven.plugins</groupId>
        <version>3.2.1</version>
      </plugin>
    </plugins>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
      </resource>
      <resource>
        <directory>.</directory>
        <includes>
          <include>THIRD-PARTY.txt</include>
          <include>LICENSE</include>
        </includes>
      </resource>
    </resources>
  </build>

  <repositories>
    <repository>
      <id>CodeMC</id>
      <url>https://repo.codemc.org/repository/maven-public</url>
    </repository>
    <repository>
      <id>papermc-repo</id>
      <url>https://papermc.io/repo/repository/maven-public/</url>
    </repository>
    <repository>
      <id>sonatype</id>
      <url>https://oss.sonatype.org/content/groups/public/</url>
    </repository>
    <repository>
      <id>aikar</id>
      <url>https://repo.aikar.co/content/groups/aikar/</url>
    </repository>
    <repository>
      <id>jitpack.io</id>
      <url>https://jitpack.io</url>
    </repository>
    <repository>
      <id>placeholderapi</id>
      <url>http://repo.extendedclip.com/content/repositories/placeholderapi/</url>
    </repository>
  </repositories>

  <dependencies>
    <dependency>
      <groupId>com.destroystokyo.paper</groupId>
      <artifactId>paper-api</artifactId>
      <version>1.12.2-R0.1-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>net.md-5</groupId>
      <artifactId>bungeecord-chat</artifactId>
      <version>1.16-R0.3</version>
      <type>jar</type>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>co.aikar</groupId>
      <artifactId>taskchain-bukkit</artifactId>
      <version>3.7.2</version>
    </dependency>
    <dependency>
      <groupId>com.github.MrMicky-FR</groupId>
      <artifactId>FastInv</artifactId>
      <version>99ef96d91e</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>me.clip</groupId>
      <artifactId>placeholderapi</artifactId>
      <version>2.10.9</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>me.HSGamer</groupId>
      <artifactId>HSCore-expression</artifactId>
      <version>1.5</version>
    </dependency>
    <dependency>
      <groupId>me.HSGamer</groupId>
      <artifactId>HSCore-collections</artifactId>
      <version>1.5</version>
    </dependency>
    <dependency>
      <groupId>me.HSGamer</groupId>
      <artifactId>HSCore-bukkit-updater</artifactId>
      <version>1.5</version>
      <exclusions>
        <exclusion>
          <groupId>com.googlecode.json-simple</groupId>
          <artifactId>json-simple</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>me.HSGamer</groupId>
      <artifactId>HSCore-bukkit-config</artifactId>
      <version>1.5</version>
    </dependency>
    <dependency>
      <groupId>me.HSGamer</groupId>
      <artifactId>HSCore-bukkit-addon</artifactId>
      <version>1.5</version>
    </dependency>
    <dependency>
      <groupId>me.HSGamer</groupId>
      <artifactId>HSCore-bukkit-command</artifactId>
      <version>1.5</version>
    </dependency>
    <dependency>
      <groupId>me.HSGamer</groupId>
      <artifactId>HSCore-common</artifactId>
      <version>1.5</version>
    </dependency>
    <dependency>
      <groupId>me.HSGamer</groupId>
      <artifactId>HSCore-bukkit-utils</artifactId>
      <version>1.5</version>
    </dependency>
    <dependency>
      <groupId>com.github.cryptomorin</groupId>
      <artifactId>XSeries</artifactId>
      <version>7.5.4</version>
    </dependency>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-engine</artifactId>
      <version>5.7.0</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-core</artifactId>
      <version>3.5.13</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-junit-jupiter</artifactId>
      <version>3.5.15</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.bstats</groupId>
      <artifactId>bstats-bukkit</artifactId>
      <version>1.7</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>de.tr7zw</groupId>
      <artifactId>item-nbt-api-plugin</artifactId>
      <version>2.5.0</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>

  <distributionManagement>
    <repository>
      <id>codemc-releases</id>
      <url>https://repo.codemc.io/repository/maven-releases/</url>
    </repository>
    <snapshotRepository>
      <id>codemc-snapshots</id>
      <url>https://repo.codemc.io/repository/maven-snapshots/</url>
    </snapshotRepository>
  </distributionManagement>
</project>
